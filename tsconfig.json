{
    "compilerOptions": {
        "lib": ["dom", "es2015"],
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "noUnusedLocals": true,
        "rootDir": "src",
        "strict": true,
        "target": "ES2021",
        "outDir": "dist",
        "baseUrl": ".",
        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"]
}
